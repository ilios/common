{{#if (has-block)}}
  {{yield this.displayText this.expand this.isTruncated this.collapse this.expanded}}
{{else}}
  <span class="truncate-text" ...attributes>
    {{this.displayText}}
    {{#if this.isTruncated}}
      <FaIcon @icon="ellipsis-h" @transform="down-6" />
      <button
        class="expand-buttons"
        aria-label={{t "general.expand"}}
        type="button"
        data-test-expand
        {{on "click" this.expand}}
      >
        <FaIcon @icon="info-circle" />
      </button>
    {{/if}}
  </span>
{{/if}}
