<h2>
  {{title}}
  {{#if showDisplayModeToggle}}
    <button {{action (toggle "groupByCompetencies" this)}}
      class={{if groupByCompetencies "active"}}
    >
      {{#if groupByCompetencies}}
        {{fa-icon "indent" title=listByPriorityPhrase}}
      {{else}}
        {{fa-icon "list" title=groupByCompetenciesPhrase}}
      {{/if}}
    </button>
  {{/if}}
</h2>

{{#if groupByCompetencies}}
  {{#if domains.length}}
    <ul class="tree">
      {{#each domains as |domain|}}
        <li>
          {{domain.title}}
          <ul>
            {{#each domain.objectives as |title|}}
              {{! template-lint-disable no-triple-curlies }}
              <li>{{{title}}}</li>
            {{/each}}
          </ul>
        </li>
      {{/each}}
    </ul>
  {{else}}
    <li class="no-content">{{t "general.none"}}</li>
  {{/if}}
{{else}}
  <ul class="list-in-order">
    {{#each objectives as |objective|}}
      <li>
        {{objective.title}}
        <span class="details">{{objective.domain}}</span>
      </li>
    {{else}}
      <li class="no-content">{{t "general.none"}}</li>
    {{/each}}
  </ul>
{{/if}}
